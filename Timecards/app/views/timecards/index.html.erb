<h1>Reporting</h1>

<form id="filter" data-remote="true">
  Start Date: <input type ="text" name="start_date" data-provide='datepicker'>
  End Date: <input type ="text" name="end_date" data-provide='datepicker'>
<input type = "Submit" value = "Submit">
</form>
<table border ="1px" class="awef">
  <tr>
    <th>Exception</th>
    <th>Date</th>
    <th>Worked</th>
    <th>Overtime</th>
    <th>Break</th>
    <th>Total</th>
    <th>In</th>
    <th>Out</th>
    <th>In</th>
    <th>Out</th>
  </tr>
  <% @timecards.each do |timecard| %>
  <tr>
    <td><%= timecard[:name] %></td>
    <td><%= timecard[:occurrence] %></td>
    <td><%= timecard[:worked_hours] %></td>
    <td><%= timecard[:overtime_hours] %></td>
    <td><%= timecard[:break_hours] %></td>
    <td><%= timecard[:total_hours] %></td>
    <td><%= timecard[:exceptions] %></td>
    <td><%= timecard[:exceptions] %></td>
    <td><%= timecard[:exceptions] %></td>
    <td><%= timecard[:exceptions] %></td>
  </tr>
  <% end %>
</table>
